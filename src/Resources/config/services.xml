<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="behat.doctrine_data_fixtures.service.backup_mysql" class="BehatExtension\DoctrineDataFixturesExtension\Service\Backup\MysqlDumpBackup"/>
        <service id="behat.doctrine_data_fixtures.service.backup_sqlite" class="BehatExtension\DoctrineDataFixturesExtension\Service\Backup\SqliteCopyBackup"/>
        <service id="behat.doctrine_data_fixtures.service.backup" class="BehatExtension\DoctrineDataFixturesExtension\Service\BackupService">
            <call method="setPlatformBackupMap">
                <argument type="collection">
                    <argument key="sqlite" type="service" id="behat.doctrine_data_fixtures.service.backup_sqlite"/>
                    <argument key="mysql" type="service" id="behat.doctrine_data_fixtures.service.backup_mysql"/>
                </argument>
            </call>
        </service>

        <service id="behat.doctrine_data_fixtures.service.hook_listener" class="BehatExtension\DoctrineDataFixturesExtension\EventListener\HookListener">
            <argument>%behat.doctrine_data_fixtures.lifetime%</argument>
            <call method="setFixtureService">
                <argument type="service" id="behat.doctrine_data_fixtures.service.fixture_loader" />
            </call>
            <tag name="event_dispatcher.subscriber" />
        </service>

        <service id="behat.doctrine_data_fixtures.service.fixture_loader" class="BehatExtension\DoctrineDataFixturesExtension\Service\FixtureService">
            <argument type="service" id="service_container" />
            <argument type="service" id="symfony2_extension.kernel" />
            <argument>%behat.doctrine_data_fixtures.use_backup%</argument>
        </service>

        <service id="behat.doctrine_data_fixtures.initializer.fixture_service_aware" class="BehatExtension\DoctrineDataFixturesExtension\Context\Initializer\FixtureServiceAwareInitializer">
            <argument type="service" id="behat.doctrine_data_fixtures.service.fixture_loader"/>
            <tag name="context.initializer"/>
        </service>
    </services>

</container>
